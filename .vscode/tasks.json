{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go: Build",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "whatsmeow-mcp", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$go"
        },
        {
            "label": "Go: Run",
            "type": "shell",
            "command": "./whatsmeow-mcp",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Go: Build"
        },
        {
            "label": "Go: Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Go: Build",
                "Go: Run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Go: Run with stdio mode",
            "type": "shell",
            "command": "./whatsmeow-mcp",
            "args": ["stdio"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Go: Build"
        },
        {
            "label": "Go: Build and Run (stdio)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Go: Build",
                "Go: Run with stdio mode"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Go: Clean Build",
            "type": "shell",
            "command": "go",
            "args": ["clean", "-cache"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Go: Test",
            "type": "shell",
            "command": "go",
            "args": ["test", "-v", "./..."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$go"
        }
    ]
}

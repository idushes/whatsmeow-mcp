# WhatsApp MCP Server Configuration

# Server Configuration
# MCP_PORT - Port for MCP/SSE server (default: 3000)
MCP_PORT=3000

# REST_PORT - Port for REST API (health checks, static files) (default: 3001)  
REST_PORT=3001

# PORT - Legacy support, sets MCP_PORT and REST_PORT=PORT+1 if MCP_PORT is not set
# PORT=3000

HOST=localhost

# MCP Configuration
SERVER_NAME=whatsmeow-mcp
SERVER_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Database Configuration
# PostgreSQL connection URL format: postgres://username:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/whatsmeow_mcp?sslmode=disable

